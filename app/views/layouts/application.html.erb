<!DOCTYPE html>
<html>
<head>
  <title>Bookmarkrv03</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <nav class="navbar navbar-inverse">
    <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Home", root_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">

      <% if logged_in? %>
      <li><%= link_to "Bookmarks", bookmarks_path%></li>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "User Profile", current_user %></li>
      <li><%= link_to "User Settings", edit_user_path(current_user) %></li>
      <li><%= link_to "Upload Bookmarks", upload_file_path %></li>
      <li><%= link_to "Logout", logout_path, method: :delete %></li>
 
      <% else %>
      <li><%= link_to "Login",   login_path %></li>
      <li><%= link_to "Sign Up", signup_path %></li>

      <% end %>
    </ul>
  </nav>

<% flash.each do |name, msg| -%>
<%= content_tag :div, msg, class: name %>
<% end -%>

<%= yield %>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
